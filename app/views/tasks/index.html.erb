<h2>My Tasks</h2>

  <% @tasks.each do |task| %>
      <%= form_for(task) do |f| %>
        <%= f.check_box :completed %>
        <%= link_to task.title, task_path(task) %>
        <%= link_to "Delete", task_path(task),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      <% end %>
      <br>
  <% end %>

<%= link_to 'Add new task', tasks_new_path%>
